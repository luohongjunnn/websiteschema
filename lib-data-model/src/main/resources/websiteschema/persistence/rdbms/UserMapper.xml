<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="websiteschema.persistence.rdbms.UserMapper">

    <cache />
    
    <select id="getTotalResults" resultType="long">
        select count(*)
        from
        User
    </select>

    <select id="getUsers" resultType="websiteschema.model.domain.User">
        select user_id userId, id, name, passwd, email, role
        from
        User
    </select>

    <!-- 查询记录，根据id -->
    <select id="getUserByUserId" parameterType="long" resultType="websiteschema.model.domain.User">
        select user_id userId, id, name, passwd, email, role
        from
        User
        where user_id = #{userId}
    </select>

    <!-- 查询记录，根据Name -->
    <select id="getUserByName" parameterType="String" resultType="websiteschema.model.domain.User">
        select user_id userId, id, name, passwd, email, role
        from
        User
        where name = #{name}
    </select>

    <!-- 查询记录，根据Id -->
    <select id="getUserById" parameterType="String" resultType="websiteschema.model.domain.User">
        select user_id userId, id, name, passwd, email, role
        from
        User
        where id = #{id}
    </select>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="websiteschema.model.domain.User"
        useGeneratedKeys="true" keyProperty="user_id">
        insert into User (id, name, email, passwd, role)
        values (#{id},#{name},#{email},#{passwd},#{role})
    </insert>

    <!-- 更新任务状态记录 -->
    <update id="update" parameterType="websiteschema.model.domain.User">
        update User set
        id = #{id},
        name = #{name},
        email = #{email},
        passwd = #{passwd},
        role = #{role}
        where user_id = #{userId}
    </update>

    <delete id="delete" parameterType="websiteschema.model.domain.User" >
        delete from User
        where user_id = #{userId}
    </delete>
    
</mapper>  